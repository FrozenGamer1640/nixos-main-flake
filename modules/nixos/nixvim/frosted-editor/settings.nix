{
  opts = {
    # line numbers
    number = true;
    relativenumber = true;

    # I like being able to SEE u know hehe
    # highlights only the current line number (not the whole line)
    cursorline = true;
    cursorlineopt = "number";

    # tabs and indenting
    shiftwidth = 4;
    tabstop = 4;
    softtabstop = 4;
    expandtab = true;
    autoindent = true;
    breakindent = true;
    wrap = false;
    fileformat = "unix";

    # autocompletion things
    wildmenu = true;
    wildmode = "noselect:full";

    # show tabs. trails and other special chars explicitly
    list = true;
    listchars = "tab:⮕ ,trail:,nbsp:•,extends:…,precedes:…";

    # the good old ruler
    colorcolumn = "80";
  };
}

